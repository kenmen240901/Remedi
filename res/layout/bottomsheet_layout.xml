<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bkg"
    android:id="@+id/bottomSheetContainer">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_remove_24"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/createText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:text="Create"
            android:padding="8dp"
            android:textColor="@color/sky"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:textSize="25dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_clear_24"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="16dp"
            android:id="@+id/cancelButton"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/activity_name"
            android:background="@drawable/custom_input"
            android:padding="8dp"
            android:hint="Activity Name"
            android:inputType="text"
            android:drawableLeft="@drawable/baseline_volunteer_activism_24"
            android:drawablePadding="8dp"
            android:textColor="@color/black"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/activity_description"
            android:background="@drawable/custom_input"
            android:padding="8dp"
            android:hint="Activity Description"
            android:layout_marginTop="20dp"
            android:inputType="textLongMessage"
            android:drawableLeft="@drawable/baseline_description_24"
            android:drawablePadding="8dp"
            android:textColor="@color/black"/>

            <Button
                android:id="@+id/Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pick Date"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:drawableLeft="@drawable/baseline_calendar_month_24"/>

        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Create New Activity"
            android:id="@+id/create_activity"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/sky"
            app:cornerRadius = "20dp"/>
</LinearLayout>